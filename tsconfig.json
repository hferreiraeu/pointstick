{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",

    // <â€” Skip library (node_modules) declaration checks
    "skipLibCheck": true,

    // Source maps for debugging
    "sourceMap": true,

    // Strictness flags
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // (optional) allow JSON imports, decorators, etc.
    "resolveJsonModule": true,
    "experimentalDecorators": true,

    "noImplicitAny": false
  },
  "include": ["src"]
}